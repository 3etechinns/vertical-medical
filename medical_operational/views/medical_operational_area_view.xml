<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_medical_operational_area_tree" model="ir.ui.view">
            <field name="name">medical.operational.area.tree</field>
            <field name="model">medical.operational.area</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Oemedical Operational_Area">
                    <field name="name" />
                    <field name="notes" />
                    <field name="sector_id" />
                </tree>
            </field>
        </record>

        <record id="view_medical_operational_area_form" model="ir.ui.view">
            <field name="name">medical.operational.area.form</field>
            <field name="model">medical.operational.area</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Oemedical Operational_Area">
                    <field name="name" />
                    <field name="sector_id"/>
                    <field name="notes" />
                </form>
            </field>
        </record>

        <record id="view_medical_operational_area_search" model="ir.ui.view">
            <field name="name">medical.operational.area.search</field>
            <field name="model">medical.operational.area</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Oemedical Operational_Area">
                    <field name="name" />
                    <field name="notes" />
                    <field name="sector_id"/>
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_medical_operational_area_view">
            <field name="name">Operational Area</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.operational.area</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_medical_operational_area_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_operational_area_view_form">
            <field name="act_window_id" ref="act_open_medical_operational_area_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_medical_operational_area_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_operational_area_view_tree">
            <field name="act_window_id" ref="act_open_medical_operational_area_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_medical_operational_area_tree" />
        </record>

        <menuitem id="medical_operational_area" parent="medical.medical_conf_physicians"
            sequence="60" action="act_open_medical_operational_area_view" />

    </data>
</openerp>