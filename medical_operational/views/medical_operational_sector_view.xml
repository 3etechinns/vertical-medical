<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_medical_operational_sector_tree" model="ir.ui.view">
            <field name="name">medical.operational_sector.tree</field>
            <field name="model">medical.operational.sector</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Oemedical Operational_Sector">
                    <field name="name" />
                    <field name="area_id" />
                </tree>
            </field>
        </record>

        <record id="view_medical_operational_sector_form" model="ir.ui.view">
            <field name="name">medical.operational.sector.form</field>
            <field name="model">medical.operational.sector</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Oemedical Operational_Sector">
                    <field name="name" />
                    <field name="area_id" />
                    <field name="notes" colspan="4" nolabel="1" />
                </form>
            </field>
        </record>

        <record id="view_medical_operational_sector_search" model="ir.ui.view">
            <field name="name">medical.operational.sector.search</field>
            <field name="model">medical.operational.sector</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Oemedical Operational_Sector">
                    <field name="notes" />
                    <field name="area_id" />
                    <field name="name" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Operational Area" domain="[]"
                            context="{'group_by':'area_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_medical_operational_sector_view">
            <field name="name">Operational Sector</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.operational.sector</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_medical_operational_sector_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_operational_sector_view_form">
            <field name="act_window_id" ref="act_open_medical_operational_sector_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_medical_operational_sector_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_operational_sector_view_tree">
            <field name="act_window_id" ref="act_open_medical_operational_sector_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_medical_operational_sector_tree" />
        </record>

        <menuitem id="medical_operational_sector" parent="medical.medical_conf_physicians"
            sequence="70" action="act_open_medical_operational_sector_view" />

    </data>
</openerp>