<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_medical_hospital_zone_tree" model="ir.ui.view">
            <field name="name">medical.hospital.zone.tree</field>
            <field name="model">medical.hospital.zone</field>
            <field name="arch" type="xml">
                <tree string="Medical Hospital Zone">
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="code" />
                    <field name="notes" />
                </tree>
            </field>
        </record>

        <record id="view_medical_hospital_zone_form" model="ir.ui.view">
            <field name="name">medical.hospital.zone.form</field>
            <field name="model">medical.hospital.zone</field>
            <field name="arch" type="xml">
                <form string="Medical Hospital Zone">
                    <sheet>
                        <div class="oe_title oe_left">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="code" />
                            <field name="partner_id" />
                            <field name="notes" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_medical_hospital_zone_search" model="ir.ui.view">
            <field name="name">medical.hospital.zone.search</field>
            <field name="model">medical.hospital.zone</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Medical Hospital Zone">
                    <field name="code" />
                    <field name="partner_id" />
                    <field name="name" />
                    <field name="notes" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Code" domain="[]" context="{'group_by':'code'}" />
                        <filter string="Institution" domain="[]"
                            context="{'group_by':'partner_id'}" />
                        <filter string="Name" domain="[]" context="{'group_by':'name'}" />
                        <filter string="Notes" domain="[]"
                            context="{'group_by':'notes'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_medical_hospital_zone_view">
            <field name="name">Hospital Zone</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.hospital.zone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_medical_hospital_zone_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_hospital_zone_view_form">
            <field name="act_window_id" ref="act_open_medical_hospital_zone_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_medical_hospital_zone_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_medical_hospital_zone_view_tree">
            <field name="act_window_id" ref="act_open_medical_hospital_zone_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_medical_hospital_zone_tree" />
        </record>

    </data>
</openerp>