<openerp>
    <data>
        
        <record model="ir.ui.view"
                id="medical_rx_sale_wizard_view_form">
            <field name="name">medical.rx.sale.wizard.view.form</field>
            <field name="model">medical.rx.sale.wizard</field>
            <field name="arch" type="xml">
                
                <form string="Rx2Sales">

                    <header>
                        <h1 class="pull-left">
                            Prescription: <field name="prescription_id" />
                        </h1>
                        <field name="state" widget="statusbar" />
                    </header>
                    
                    <sheet>
                        <group name="data">
                            <field name="patient_id" domain="[('is_patient', '=', True)]"
                                   context="{'default_is_patient': True}" />
                            <field name="pharmacy_id" domain="[('is_pharmacy', '=', True)]"
                                   context="{'default_is_pharmacy': True}" />
                            <field name="order_date" />
                            <field name="split_orders" />
                            <field name="sale_wizard_ids"
                                   context="{
                                        'default_pharmacy_id': pharmacy_id,
                                        'default_patient_id': patient_id,
                                        'default_order_date': order_date,
                                   }" />
                        </group>
                    </sheet>
                    
                    <footer>
                        <button special="cancel"
                                string="Cancel" />
                        <button name="_do_rx_sale_conversions"
                                type="object"
                                string="Create"
                                class="oe_highlight" />
                    </footer>
                    
                </form>
            </field>
        </record>

        <act_window src_model="medical.prescription.order"
                    res_model="medical.rx.sale.wizard"
                    id="medical_rx_sale_wizard_action"
                    name="Create Sale(s)"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
        
    </data>
</openerp>
