<openerp>
    <data>
        
        <record id="medical_prescription_order_line_state_view_form" model="ir.ui.view">
            <field name="name">medical.prescription.order.line.state.view.form</field>
            <field name="model">medical.prescription.order.line.state</field>
            <field name='inherit_id' ref='medical_abstract_prescription_state_view_form'/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="string">Rx Line State</attribute>
                </xpath>
            </field>
        </record>
        
        <record id="medical_prescription_order_line_state_view_tree" model="ir.ui.view">
            <field name="name">medical.prescription.order.line.state.view.tree</field>
            <field name="model">medical.prescription.order.line.state</field>
            <field name='inherit_id' ref='medical_abstract_prescription_state_view_tree'/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="string">Rx Line States</attribute>
                </xpath>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="medical_prescription_order_line_state_action">
             <field name="name">Rx Line States</field>
             <field name="model">medical.prescription.order.line.state</field>
             <field name='inherit_id' ref='medical_abstract_prescription_state_action'/>
         </record>
        
    </data>
</openerp>
