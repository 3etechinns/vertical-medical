	<data>
 		<record id="view_oemedical_patient_tree" model="ir.ui.view"> 
 			<field name="name">oemedical.patient.tree</field> 
 			<field name="model">oemedical.patient</field> 
 			<field name="priority" eval="8" /> 
 			<field name="arch" type="xml"> 
 				<tree string="Oemedical Patient"> 
 					<field name="name" /> 
 					<field name="lastname" /> 
 					<field name="slastname" />
 					<field name="ssn" /> 
 					<field name="identification_code" /> 
 					<field name="dob" /> 
 					<field name="age" /> 
 					<field name="blood_type" /> 
 					<field name="rh"/> 
 					<field name="sex" /> 
 				</tree> 
 			</field> 
 		</record> 

 		<record id="view_oemedical_patient_form" model="ir.ui.view"> 
 			<field name="name">oemedical.patient.form</field> 
 			<field name="model">oemedical.patient</field> 
 			<field name="priority" eval="8" /> 
 			<field name="arch" type="xml"> 
 			 <form string="Patient" version="7.0"> 
                    <sheet> 
                        <field name="photo" widget='image' class="oe_left oe_avatar"/> 
                        <div> 
                             <h1> 
		                        <field name="name" placeholder="First Name" style="width: 20%%" /> 
		                        <field name="lastname" placeholder="Last Name" style="width: 20%%" /> 
		                        <field name="slastname" placeholder="S Last Name" style="width: 20%%" /> 
	                        </h1> 
                        </div> 
 						<div> 
 							<label for="sex" class="oe_edit_only"/> 
 							<field name="sex" style="width: 30%%"/> 
 							<label for="blood_type" class="oe_edit_only"/> 
 							<field name="blood_type" style="width: 8%%"/> 
 							<field name="rh" style="width: 2%%"/> 
 						</div> 
 						<div> 
 						</div> 
 						<div> 
 							<label for="ssn"/> 
 							<field name="ssn" style="width: 20%%"/> 
 							<label for="identification_code"/> 
 							<field name="identification_code" style="width: 17%%"/> 
 							<label for="dob"/> 
 							<field name="dob" style="width: 15%%"/> 
 							<label for="age"/> 
 							<field name="age" style="width: 8%%"/> 
                         </div> 
                    <notebook> 
                        <page string="Public Information"> 
                            <group  string="Address"col="4" colspan="2"> 
                              	<field name="current_address" nolabel="1"/> 
                            </group>>        
