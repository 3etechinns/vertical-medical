<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_res_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Res Partner">
                    <!--field name="insurance_plan_ids"/-->
                    <field name="is_insurance_company"/>
                    <field name="relationship"/>
                    <!--field name="insurance_company_type"/-->
                    <field name="is_institution"/>
                    <field name="relative_id"/>
                    <field name="is_doctor"/>
                    <field name="is_patient"/>
                    <field name="alias"/>
                    <field name="internal_user"/>
                    <field name="activation_date"/>
                    <field name="lastname"/>
                    <field name="is_work"/>
                    <field name="is_person"/>
                    <field name="is_school"/>
                    <field name="is_pharmacy"/>
                    <field name="ref"/>
                    <!--field name="insurance"/-->
                </tree>
            </field>
        </record>

        <record id="view_res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Res Partner">
                    <!--field name="insurance_plan_ids"/-->
                    <field name="is_insurance_company"/>
                    <field name="relationship"/>
                    <!--field name="insurance_company_type"/-->
                    <field name="is_institution"/>
                    <field name="relative_id"/>
                    <field name="is_doctor"/>
                    <field name="is_patient"/>
                    <field name="alias"/>
                    <field name="internal_user"/>
                    <field name="activation_date"/>
                    <field name="lastname"/>
                    <field name="is_work"/>
                    <field name="is_person"/>
                    <field name="is_school"/>
                    <field name="is_pharmacy"/>
                    <field name="ref"/>
                    <!--field name="insurance"/-->
                </form>
            </field>
        </record>

        <record id="view_res_partner_search" model="ir.ui.view">
            <field name="name">res.partner.search</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Res Partner">
                    <field name="is_insurance_company"/>
                    <field name="relationship"/>
                    <field name="is_institution"/>
                    <field name="relative_id"/>
                    <field name="is_doctor"/>
                    <field name="is_patient"/>
                    <field name="alias"/>
                    <field name="internal_user"/>
                    <field name="activation_date"/>
                    <field name="lastname"/>
                    <field name="is_work"/>
                    <field name="is_person"/>
                    <field name="is_school"/>
                    <field name="is_pharmacy"/>
                    <field name="ref"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Insurance Company" domain="[]" context="{'group_by':'is_insurance_company'}"/>
                        <filter string="Relationship" domain="[]" context="{'group_by':'relationship'}"/>
                        <filter string="Institution" domain="[]" context="{'group_by':'is_institution'}"/>
                        <filter string="Contact" domain="[]" context="{'group_by':'relative_id'}"/>
                        <filter string="Health Prof" domain="[]" context="{'group_by':'is_doctor'}"/>
                        <filter string="Patient" domain="[]" context="{'group_by':'is_patient'}"/>
                        <filter string="Alias" domain="[]" context="{'group_by':'alias'}"/>
                        <filter string="Internal User" domain="[]" context="{'group_by':'internal_user'}"/>
                        <filter string="Activation date" domain="[]" context="{'group_by':'activation_date'}"/>
                        <filter string="Last Name" domain="[]" context="{'group_by':'lastname'}"/>
                        <filter string="Work" domain="[]" context="{'group_by':'is_work'}"/>
                        <filter string="Person" domain="[]" context="{'group_by':'is_person'}"/>
                        <filter string="School" domain="[]" context="{'group_by':'is_school'}"/>
                        <filter string="Pharmacy" domain="[]" context="{'group_by':'is_pharmacy'}"/>
                        <filter string="SSN" domain="[]" context="{'group_by':'ref'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_res_partner_view">
            <field name="name">Res Partner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_res_partner_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_res_partner_view_form">
            <field name="act_window_id" ref="act_open_res_partner_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_res_partner_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_res_partner_view_tree">
            <field name="act_window_id" ref="act_open_res_partner_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_res_partner_tree"/>
        </record>

    </data>
</openerp>
