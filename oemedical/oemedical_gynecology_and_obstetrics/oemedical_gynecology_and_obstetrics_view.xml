<!--                                                <field name="pregnancy_end_date"/>-->
<!--                                                <field name="pregnancy_end_result"/>-->
<!--                                            </group>    -->
<!--                                        </form>-->
                                    </field>
                                </page>
                            </notebook>
                        </page>
                    </notebook>
                </data>
            </field>
        </record>
	</data>
