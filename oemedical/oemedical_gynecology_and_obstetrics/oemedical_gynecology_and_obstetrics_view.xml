<!--                                            <group id="group_pregnancy_footer1" colspan="4" col="8">                    -->
<!--                                                <field name="fetuses"/>-->
<!--                                                <field name="monozygotic"/>-->
<!--                                                <field name="iugr"/>-->
<!--                                                <field name="warning"/>-->
<!--                                            </group>-->
<!--                                            <newline/>-->
